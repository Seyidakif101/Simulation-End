@model List<FoodGetVM>
<div class="container">
    <div class="row">
        <div>
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">CategoryName</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var food in Model)
                {
                    <tr>
                        <th scope="row">@food.Id</th>
                        <td><img src="~/images/@food.ImagePath" /></td>
                        <td>@food.Name</td>
                        <td>@food.Description</td>
                        <td>@food.Price</td>
                        <td>@food.CategoryName</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@food.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@food.Id" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>